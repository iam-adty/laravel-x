{
    "include": [
        "./resources/js/**/*"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@Components/*": [
                "resources/js/Components/*"
            ],
            "@Layouts/*": [
                "resources/js/Layouts/*"
            ],
            "@Pages/*": [
                "resources/js/Pages/*"
            ],
            "@/*": [
                "resources/js/*"
            ]
        },
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "sourceMap": true
    }
}
